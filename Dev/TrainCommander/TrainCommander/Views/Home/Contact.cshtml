@model TrainCommander.Models.MailModels
@{
    ViewBag.Title = "Contact";
}

@section head{
    <title>Contact</title>
}
<div class="container-fluid">
    <div class="gmap-area">
        <div class="container">
            <div class="row marginT50">
                <div class="col-sm-4">
                    <div class="gmap">
                        <iframe frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="https://www.google.com/maps/embed/v1/place?key=AIzaSyDpln0Fisj7R_QVOLZbOGKJT6CCHZg2Vvw&q=Tour+Montparnasse,Paris+France"></iframe>
                    </div>
                </div>
                <div class="col-sm-8">
                    @using (Html.BeginForm("Contact", "Home", FormMethod.Post, new { @class = "contactForm" }))
                    {
                        @Html.ValidationSummary()
                        @Html.AntiForgeryToken()
                        <div class="form-header">
                            <h1>
                                @langage.contactUs
                            </h1>
                        </div>
                        <div class="form-group form-group-flex marginB25">
                            <div class="fiftyFormLeft">
                                @Html.LabelFor(model => model.FirstName)
                                @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "formControl formText" } })
                                @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
                            </div>
                            <div class="fiftyFormRight">
                                @Html.LabelFor(model => model.LastName)
                                @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "formControl formText" } })
                                @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group form-group-flex marginB25">
                            <div class="fiftyFormLeft">
                                @Html.LabelFor(model => model.Email)
                                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "formControl formText" } })
                                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                            </div>
                            <div class="fiftyFormRight">
                                @Html.LabelFor(model => model.Telephone)
                                @Html.EditorFor(model => model.Telephone, new { htmlAttributes = new { @class = "formControl formText" } })
                                @Html.ValidationMessageFor(model => model.Telephone, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group marginB25">
                            @Html.LabelFor(model => model.Message)
                            @Html.TextAreaFor(model => model.Message, new { @class = "formControl formTextArea" })
                            @Html.ValidationMessageFor(model => model.Message, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group txtAlignC">
                            <button type="submit" class="btnAction">@langage.send</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

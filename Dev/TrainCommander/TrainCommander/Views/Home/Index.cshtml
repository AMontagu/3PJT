                    $("#pathThroughDiv").show();
                    $("#CityThrough").rules("add", { required: true });
                }
                else {
                    $("#pathThroughDiv").hide();
                    $("#CityThrough").rules("remove", "required");
                }
            });

            $(".tripWay").change(function () {
                if ($("#returnRadio").is(":checked")) {
                    $("#returnDiv").show();
                    $("#datePickerReturn").rules("add", { required: true });
                }
                else {
                    $("#returnDiv").hide();
                    $("#datePickerReturn").rules("remove", "required");
                }

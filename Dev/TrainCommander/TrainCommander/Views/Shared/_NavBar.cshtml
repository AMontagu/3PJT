@*@model ExternalLoginConfirmationViewModel*@
@using TrainCommander.Classes
@using TrainCommander.Helpers
<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            @Html.ActionLink("Train Commander", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink(@langage.home, "Index", "Home")</li>
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"> @langage.trip <span class="caret"></span></a>
                    <ul class="dropdown-menu">
                        <li>@Html.ActionLink(@langage.reserv, "Index", "Trip")</li>
                        <li>@Html.ActionLink(@langage.promos, "Promo", "Trip")</li>
                    </ul>
                </li>
                <li>@Html.ActionLink(@langage.aboutUs, "About", "Home")</li>
                <li>@Html.ActionLink(@langage.contact, "Contact", "Home")</li>
            </ul>

            <ul class="nav navbar-nav navbar-right">
                <li>
                    @if (LocalizationAttribute.GetCurrentCulture() == "fr-FR")
                    {
                        <a href="/en/">
                            @Html.Image("englishFlag.jpg", "switch to English", "switch to English")
                        </a>
                    }
                    else if (LocalizationAttribute.GetCurrentCulture() == "en")
                    {
                        <a href="/">
                            @Html.Image("frenchFlag.jpg", "passer au Français", "passer au Français")
                        </a>
                    }
                </li>
            </ul>
            @Html.Partial("_LoginPartial")
            <ul class="nav navbar-nav navbar-right">
                <li>
                    @Html.ActionImage("Checkout", "Cart", new { }, "panier.png", @langage.cart, @langage.cart, "max-width:25px")
                </li>
            </ul>
        </div>
    </div>
</div>


